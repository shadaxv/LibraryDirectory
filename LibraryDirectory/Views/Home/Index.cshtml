@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Directory</title>
    <meta name="description" content="Library Directory - Project on the ASP.NET platform">
    <meta name="author" content="Aleksander Niedźwiedź">
    @Styles.Render("~/Content/css")
</head>

<body>
    <div style="margin: 0 auto">
        <div>
            @if (Request.IsAuthenticated)
            {
                @User.Identity.Name
            }
        </div>
        <div>
            @if (Request.IsAuthenticated)
            {
                <span>No elo</span>
            }
            else
            {
                @Html.ActionLink("Sign In", "Login", "Authorization")
                @Html.ActionLink("Sign Up", "Registration", "Authorization")
            }
        </div>
    </div>
</body>
</html>
